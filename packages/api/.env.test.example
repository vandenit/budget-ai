# API Test Environment Variables
# Copy this file to .env.test and fill in the values

NODE_ENV=test
PORT=4000

# MongoDB Test Database
MONGODB_URI=mongodb://mongodb-test:27017/budget_ai_test

# YNAB API (use test/sandbox credentials)
YNAB_ACCESS_TOKEN=test-token-or-leave-empty
YNAB_BUDGET_ID=test-budget-id-or-leave-empty

# OpenAI API (optional for tests, can use mock)
OPENAI_API_KEY=test-key-or-leave-empty

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=your-api-audience

# JWT Configuration
JWT_SECRET=test-jwt-secret-at-least-32-characters-long
JWT_ISSUER=https://your-tenant.auth0.com/

# CORS
CORS_ORIGIN=http://localhost:3001

# Math API URL
MATH_API_URL=http://mathapi-test:5000

# Disable Sentry in tests
SENTRY_DISABLED=true
