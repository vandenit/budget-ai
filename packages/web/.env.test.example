# Web Test Environment Variables
# Copy this file to .env.test and fill in the values

NODE_ENV=test
PORT=3000

# API URLs (internal Docker network)
API_URL=http://api-test:4000
MATH_API_URL=http://mathapi-test:5000

# Public API URLs (accessible from browser/Playwright)
NEXT_PUBLIC_API_URL=http://localhost:4001
NEXT_PUBLIC_MATH_API_URL=http://localhost:5001

# Auth0 Test Configuration
AUTH0_SECRET=test-secret-at-least-32-characters-long
AUTH0_BASE_URL=http://localhost:3001
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-test-client-id
AUTH0_CLIENT_SECRET=your-test-client-secret

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=test-secret-at-least-32-characters-long

# Disable Sentry in tests
SENTRY_DISABLED=true
