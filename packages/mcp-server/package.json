{
  "name": "mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Budget AI - allows conversational access to budget data",
  "type": "module",
  "main": "dist/index-api.js",
  "bin": {
    "budget-mcp": "./dist/index-api.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index-api.js",
    "dev": "tsx watch src/index-api.ts",
