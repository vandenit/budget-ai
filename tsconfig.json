{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "common-ts": ["packages/common-ts/dist"]
      },
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "skipLibCheck": true,
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": ["packages/**/*"]
  }
  